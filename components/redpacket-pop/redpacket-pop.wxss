
.masking{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.5);
  overflow: hidden;
  z-index: 100;
  color: #fff;
}
.redpacketpop{
  z-index: 200; 
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.redpacketpop image{
  width: 568rpx;
  height: 802rpx;
  
}
.redpacketpop .close{
  position: absolute;
  top:30rpx;
  right:30rpx;
  font-size: 27rpx;
}
