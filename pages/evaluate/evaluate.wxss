/* pages/evaluate/evaluate.wxss */
page{
  height: 100%;
  background-color:#F5FAF5;
}
/* 星星点赞部分 */
.evaluateCon{
  padding:0 30rpx;
}
.evaluateBgk{
  background-color:#fff;
  border-radius: 10rpx;
}
.evaluateItem{
  margin-top:30rpx;
}
.title{
  padding-top:30rpx;
  padding-left:30rpx;
  color:#203736;
  font-size:30rpx; 
}
.starList{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:40rpx 100rpx 50rpx;
}
.star{
 font-size: 66rpx;
 color:#EFEFEF;
}
.active{
  color:#83C582;
  font-size: 66rpx;
}
/* 输入评价部分 */
.textarea{
  
  background-color: #fff;
  margin-top:22rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.textarea textarea{
  width: 100%;
  box-sizing: border-box;
  padding:30rpx 30rpx 0 30rpx;
  overflow:hidden;
 
}
.placeholderSty{
  color:#B4B5B5; 
}

.btn{
  width: 92%;
  position: absolute;
  bottom:30rpx; 
 
 
}
.btn button{
 background-color:#83C582;
 font-size: 40rpx;
}
